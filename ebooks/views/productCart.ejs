<html>
    <head>
        <title>Carrito de compras</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="stylesheets\cart.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
        <link rel="stylesheet" href="stylesheets\header-footer.css">
        <script src="https://kit.fontawesome.com/2c807fa682.js" crossorigin="anonymous"></script>
        <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    </head>
    <body>

      <%-include('./partials/header') %> 

      <main>
        <div id="products">
          <h2>Carrito</h2>
            <% for(i=0; i<=product.lenght; i++){%>
              <div>
                <p>product.name</p>
                <p>product.precio</p>
              </div>
            <%}%>           
        </div>
        <div id="purchase">
            <button type="button">Seguir Comprando</button>
            <button type="reset">Vaciar Carrito</button>
          <div>
            <h4>Precio Total</h4>
            <a href="/purchaseCompleted"><button type="button">Finalizar comprar</button></a>
          </div>  
        </div>
      </main>

      <%-include('./partials/footer') %> 
    
    </body>
</html>